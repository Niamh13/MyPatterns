<h1><%= @pattern.title %></h1>

<div class="card p-3 mb-3 shadow-sm">
    <p><strong>Source:</strong> <%= @pattern.source %></p>
    <p><strong>Link:</strong> <%= link_to @pattern.link, @pattern.link, target: "_blank" %></p>
    <p><strong>Difficulty:</strong> <%= @pattern.difficulty %></p>
    <p><strong>Rating:</strong> <%= @pattern.rating %></p>
    <p><strong>Times Made:</strong> <%= @pattern.made %></p>
    <p><strong>Tags:</strong> <%= @pattern.tags %></p>
    <p><strong>Yarn Weight:</strong> <%= @pattern.yarn_weight %></p>
    <p><strong>Stitch Type:</strong> <%= @pattern.stitch_type %></p>
    <p><strong>Hook Size:</strong> <%= @pattern.size%></p>
    <% if @pattern.notes.present? %>
      <p><strong>Notes:</strong> <%= simple_format(@pattern.notes) %></p>
    <% end %>
  </div>

  <div class="d-flex justify-content-between mb-4">
    <%= link_to "Edit Pattern", edit_pattern_path(@pattern), class: "btn btn-primary" %>
    <%= link_to "Back to All Patterns", patterns_path, class: "btn btn-secondary" %>
    <%= button_to "Delete Pattern", @pattern, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>

  <hr>

  <h3 class="mb-3">Recommended Patterns</h3>
  <% if @recommendations.present? && @recommendations.any? %>
    <div class="row">
      <% @recommendations.each do |rec| %>
        <div class="col-md-4">
          <div class="card mb-3 shadow-sm h-100">
            <div class="card-body">
              <h5><%= link_to rec.title, rec, class: "text-decoration-none" %></h5>
              <p><strong>Difficulty:</strong> <%= rec.difficulty %></p>
              <p><strong>Tags:</strong> <%= rec.tags %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No similar patterns found yet.</p>
  <% end %>
</div>
